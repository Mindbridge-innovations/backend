{
    "info": {
      "title": "Backend API",
      "description": "API for user registration, login, password management, and profile updates.",
      "version": "1.0.0"
    },
    "paths": {
      "/api/register": {
        "post": {
          "summary": "Register a new user",
          "parameters": [
            {
              "name": "User",
              "in": "body",
              "description": "User details for registration",
              "required": true,
              "schema": {
                "$ref": "#/definitions/UserRegistration"
              }
            }
          ],
          "responses": {
            "201": {
              "description": "User registered successfully",
              "schema": {
                "$ref": "#/definitions/User"
              }
            },
            "400": {
              "description": "Bad request. Invalid input data."
            },
            "500": {
              "description": "Internal server error"
            }
          }
        }
      },
      "/api/login": {
        "post": {
          "summary": "Login to the system",
          "parameters": [
            {
              "name": "Credentials",
              "in": "body",
              "description": "User credentials (email and password)",
              "required": true,
              "schema": {
                "$ref": "#/definitions/LoginCredentials"
              }
            }
          ],
          "responses": {
            "200": {
              "description": "Login successful",
              "schema": {
                "$ref": "#/definitions/AuthResponse"
              }
            },
            "400": {
              "description": "Bad request. Invalid credentials."
            },
            "500": {
              "description": "Internal server error"
            }
          }
        }
      },
      "/api/forgot-password": {
        "post": {
          "summary": "Request password reset",
          "parameters": [
            {
              "name": "Email",
              "in": "body",
              "description": "User email for password reset",
              "required": true,
              "schema": {
                "$ref": "#/definitions/Email"
              }
            }
          ],
          "responses": {
            "200": {
              "description": "Password reset token generated successfully"
            },
            "500": {
              "description": "Internal server error"
            }
          }
        }
      },
      "/api/reset-password": {
        "post": {
          "summary": "Reset password",
          "parameters": [
            {
              "name": "ResetDetails",
              "in": "body",
              "description": "User email, reset token, and new password",
              "required": true,
              "schema": {
                "$ref": "#/definitions/ResetDetails"
              }
            }
          ],
          "responses": {
            "200": {
              "description": "Password reset successful"
            },
            "500": {
              "description": "Internal server error"
            }
          }
        }
      },
      "/api/user/profile": {
        "put": {
          "summary": "Update user profile",
          "parameters": [
            {
              "name": "Authorization",
              "in": "header",
              "description": "JWT token for user authentication",
              "required": true,
              "type": "string"
            },
            {
              "name": "UserProfile",
              "in": "body",
              "description": "Updated user profile data",
              "required": true,
              "schema": {
                "$ref": "#/definitions/UserProfile"
              }
            }
          ],
          "responses": {
            "200": {
              "description": "User profile updated successfully"
            },
            "401": {
              "description": "Unauthorized. Invalid or expired token."
            },
            "500": {
              "description": "Internal server error"
            }
          }
        }
      }
    },
    "definitions": {
      "UserRegistration": {
        "type": "object",
        "properties": {
          "firstName": { "type": "string" },
          "lastName": { "type": "string" },
          "email": { "type": "string" },
          "phoneNumber": { "type": "string" },
          "username": { "type": "string" },
          "password": { "type": "string" },
          "role": { "type": "string" }
        }
      },
      "User": {
        "type": "object",
        "properties": {
          
        }
      },
      "LoginCredentials": {
        "type": "object",
        "properties": {
          "email": { "type": "string" },
          "password": { "type": "string" }
        }
      },
      "AuthResponse": {
        "type": "object",
        "properties": {
          
        }
      },
      "Email": {
        "type": "object",
        "properties": {
          "email": { "type": "string" }
        }
      },
      "ResetDetails": {
        "type": "object",
        "properties": {
          "email": { "type": "string" },
          "token": { "type": "string" },
          "newPassword": { "type": "string" }
        }
      },
      "UserProfile": {
        "type": "object",
        "properties": {
          "firstName": { "type": "string" },
          "lastName": { "type": "string" },
          "age": { "type": "integer" }
        }
      }
    }
  }
  